<%= tag.tr id: dom_id(room) do %>
  <td><%= room.name %></td>
  <td><%= room.headquarter.name %></td>
  <td><%= room.capacity %></td>
  <td><%= room.description %></td>
  <td>
    <%= link_to edit_room_path(room), 
      class: "btn btn-warning btn-sm btn-sm btn-icon text-white",title: 'Editar' ,data: { turbo_frame: "modal"} do %>
      <i class="bi bi-pencil-square"></i>
    <% end %>
    <%= link_to modal_disable_room_path(room), 
      class: "btn btn-sm btn-icon btn-danger",title: 'Eliminar' ,data: { turbo_frame: "modal"} do %>
      <i class="bi bi-trash"></i>
    <% end %>
  </td>
<% end %>