  <div class="mb-3">
    <label class="form-label">Descripción</label>
    <input type="text" class="form-control" placeholder="Disabled input" disabled value=<%= @course_type.description %>  >
  </div>
  <div class="mb-3 row">
    <div class="col-6">
      <label class="form-label">Cupo mínimo</label>
      <input type="text" class="form-control" placeholder="Disabled input" disabled value=<%= @course_type.min_quota %>  >
    </div>
    <div class="col-6">
      <label class="form-label">Cupo máximo</label>
      <input type="text" class="form-control" placeholder="Disabled input" disabled value=<%= @course_type.max_quota %>  >
    </div>
  </div>
  <div class="mb-3 row">
    <div class="col-4">
      <label class="form-label">Nota mínima</label>
      <input type="text" class="form-control" placeholder="Disabled input" disabled value=<%= @course_type.min_score %>  >
    </div>
    <div class="col-4">
      <label class="form-label">Nota máxima</label>
      <input type="text" class="form-control" placeholder="Disabled input" disabled value=<%= @course_type.max_score %>  >
    </div>
    <div class="col-4">
      <label class="form-label">Aprueba con</label>
      <input type="text" class="form-control" placeholder="Disabled input" disabled value=<%= @course_type.passing_score %>  >
    </div>
  </div>
  <div class="mb-3 row">
    <div class="col-6">
      <label class="form-label">Recuperatorios</label>
      <input type="text" class="form-control" placeholder="Disabled input" disabled value=<%= @course_type.number_of_repeat %>  >
    </div>
    <div class="col-6">
      <label class="form-label">Necesita código</label>
      <input type="text" class="form-control" placeholder="Disabled input" disabled value=<%= @course_type.need_code ? "Si" : "No" %>  >
    </div>
  </div>
  <h2>Módulos</h2>
  <% day = @course_type.course_type_units.first&.day %>
  <% unit = '' %>
  <% @course_type_units.each do |unit| %>
    <% if day != unit.day || @course_type.course_type_units.first.id == unit.id %>
      <h3>Día <%= unit.day %></h3>
      <% day = unit.day %>
    <% end %>
    <div class="mb-3 row">
      <div class="col-3">
        <label class="form-label">Módulo</label>
        <p><%= unit.unit.name %></p>
      </div>
      <div class="col-3">
        <label class="form-label">Turno</label>
        <p><%= unit.shift %></p>
      </div>
      <div class="col-3">
        <label class="form-label">Horario</label>
        <p><%= unit.schedule %></p>
      </div>
      <div class="col-3">
        <% if unit.is_by_turn %>
          <label class="form-label">Duración del turno</label>
            <p>Turnos de <%= unit.shift_time %> minutos.</p>
        <% end %>
      </div>
    </div>
    <% unit = unit.unit.name %>
  <% end %>