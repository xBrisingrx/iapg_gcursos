<h1>Tipos de cursos</h1>
<div class="row justify-content-between mb-2">
  <div class="col-4">
    <%= link_to "Registrar tipo", 
      new_course_type_path,
      data: { turbo_frame: "modal"},
      class: "btn btn-sm btn-primary" %>
  </div>
  <div class="col-6">
    <%= search_form_for @query, method: :get, data: { controller: "filter", filter_target: "form", turbo_frame: "table" } do |form| %>
      <%= form.search_field :name_or_description_or_min_quota_or_max_quota_or_min_score_or_max_score_or_passing_score_or_need_code_or_number_of_repeat_cont,
          placeholder: "Filtrar...",
          class: "form-control form-control-sm",
          autocomplete: "off",
          data: { action: "input->filter#search" }
        %>
    <% end %>
  </div>
</div>
<%= turbo_frame_tag 'table', id: 'course_types_table' do %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>Nombre</th>
          <th>Descripción</th>
          <th>Cupo min.</th>
          <th>Cupo max.</th>
          <th>Nota min.</th>
          <th>Nota max.</th>
          <th>Aprueba con</th>
          <th>Recuperatorios</th>
          <th>Require código</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id='tbody_course_types'>
        <%= render @course_types %>
      </tbody>
    </table>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>