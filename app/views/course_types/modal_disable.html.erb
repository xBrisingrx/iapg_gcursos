<%= render 'shared/modal', title: "Dar de baja tipo de curso", fade_in: true do %>
  <p>Se va a dar de baja el tipo de curso <b><%= @course_type.name %></b></p>
  <%= form_with(url: disable_course_type_path(@course_type), method: 'PUT') do |form| %>
      <%= form.submit 'Dar de baja', class: 'btn btn-danger' %>
      <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cancelar</button>
    </div>
  <% end %>
<% end %>