<h1>Exámenes</h1>
<div class="row justify-content-between mb-2">
  <div class="col-4">
    <%= link_to "Registrar exámen", 
      new_test_path,
      class: "btn btn-sm btn-primary" %>
  </div>
  <div class="col-6">
    <%= search_form_for @query, method: :get, data: { controller: "filter", filter_target: "form", turbo_frame: "table" } do |form| %>
      <%= form.search_field :name_cont,
          placeholder: "Filtrar...",
          class: "form-control form-control-sm",
          autocomplete: "off",
          data: { action: "input->filter#search" }
        %>
    <% end %>
  </div>
</div>
<%= turbo_frame_tag 'table', id: 'tests_table' do %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th><%= sort_link(@query, :name, "Nombre") %></th>
          <th><%= sort_link(@query, :instance, "Instancia") %></th>
          <th><%= sort_link(@query, :fleet, "Flota") %></th>
          <th><%= sort_link(@query, :modality, "Modalidad") %></th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id='tbody_tests'>
        <%= render @tests %>
      </tbody>
    </table>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
