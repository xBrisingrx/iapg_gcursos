<%= render 'shared/modal', title: "Registrados", fade_in: true do %>
  <%= turbo_frame_tag 'table', id: 'course_people_table' do %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>Persona</th>
            <% @units.each do |unit| %>
              <th><%= unit.name %></th>
            <% end %>
          </tr>
        </thead>
        <tbody id='tbody_course_people'>
          <%= render @course_people %>
        </tbody>
      </table>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  <% end %>
<% end %>