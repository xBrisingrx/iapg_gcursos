<%= render 'shared/modal', title: "Turnos", fade_in: true do %>
  <%= turbo_frame_tag 'table', id: 'turns_table' do %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>Nombre</th>
            <th>Horario</th>
          </tr>
        </thead>
        <tbody id='tbody_turns'>
          <% @course_people.each do |person| %>
            <tr>
              <td><%= person.person.fullname %></td>
              <td><%= person.from_hour&.strftime("%k:%M") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  <% end %>
<% end %>