<%= render 'shared/modal', title: "Dar de baja empresa", fade_in: true do %>
  <p>Se va a dar de baja el empresa <b><%= @company.name %></b></p>
  <%= form_with(url: disable_company_path(@company), method: 'PUT') do |form| %>
      <%= form.submit 'Dar de baja', class: 'btn btn-danger' %>
      <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cancelar</button>
    </div>
  <% end %>
<% end %>