<%= form_with(model: headquarter, builder: BootstrapBuilder) do |form| %>
  <div class="form-group row mb-2">
    <%= form.label :name, "Nombre"%>
    <%= form.text_field :name, required: true %>
    <%= inline_error_for(:name, headquarter) %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :description, "Descripción"%>
    <%= form.text_field :description %>
    <%= inline_error_for(:description, headquarter) %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :city_id, "Ciudad" %>
    <div class="col-6">
      <%= form.select :city_id, City.all.includes(:province).collect { |city| [ "#{city.province.name} #{city.name}", city.id ] },
        {:include_blank => "Seleccione ciudad"},
        data: {controller: 'tselect',
          tselect_ids_value: @city_id
        },
        required: true
      %>
    </div>
    <%= inline_error_for(:city_id, headquarter, "offset-3") %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :sectional_id, "Seccional" %>
    <div class="col-6">
      <%= form.select :sectional_id, Sectional.actives.all.collect { |sectional| [ "#{sectional.name}", sectional.id ] },
        {:include_blank => "Seleccione seccional"},
        data: {controller: 'tselect',
          tselect_ids_value: @sectional_id
        },
        required: true
      %>
    </div>
    <%= inline_error_for(:sectional_id, headquarter, "offset-3") %>
  </div>

  <div class="form-check mb-2">
    <%= form.check_box :can_make_psychometric, class: "form-check-input" %>
    <%= form.label :operator, "Realiza psicométrico" %>
  </div>

  <div class="mt-2">
    <%= form.submit "Guardar" %>
    <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal">Cancelar</button>
  </div>
<% end %>
