<h1>Seccionales</h1>
<div class="row justify-content-between mb-2">
  <div class="col-4">
    <%= link_to "Registrar seccional", 
      new_sectional_path,
      data: { turbo_frame: "modal"},
      class: "btn btn-sm btn-primary" %>
  </div>
  <div class="col-6">
    <%= search_form_for @query, method: :get, data: { controller: "filter", filter_target: "form", turbo_frame: "table" } do |form| %>
      <%= form.search_field :name_or_direction_or_city_name_or_province_name_cont,
          placeholder: "Filtrar...",
          class: "form-control form-control-sm",
          autocomplete: "off",
          data: { action: "input->filter#search" }
        %>
    <% end %>
  </div>
</div>
<%= turbo_frame_tag 'table', id: 'sectionals_table' do %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th><%= sort_link(@query, :name, "Nombre") %></th>
          <th><%= sort_link(@query, :direction, "DirecciÃ³n") %></th>
          <th><%= sort_link(@query, :province_id, "Provincia") %></th>
          <th><%= sort_link(@query, :city_id, "Localidad") %></th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id='tbody_sectionals'>
        <%= render @sectionals %>
      </tbody>
    </table>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>
