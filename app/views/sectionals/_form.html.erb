<%= form_with(model: sectional, builder: BootstrapBuilder) do |form| %>
  <div class="form-group row mb-2">
    <%= form.label :name, "Nombre"%>
    <%= form.text_field :name, required: true %>
    <%= inline_error_for(:name, sectional) %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :direction, "DirecciÃ³n"%>
    <%= form.text_field :direction %>
    <%= inline_error_for(:direction, sectional) %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :city_id, "Ciudad" %>
    <div class="col-6">
      <%= form.select :city_id, City.all.includes(:province).collect { |city| [ "#{city.province.name} #{city.name}", city.id ] },
        {:include_blank => "Seleccione ciudad"},
        data: {controller: 'tselect',
          tselect_ids_value: @city_id
        },
        required: true
      %>
    </div>
    <%= inline_error_for(:city_id, sectional, "offset-3") %>
  </div>

  <div class="mt-2">
    <%= form.submit "Guardar" %>
    <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal">Cancelar</button>
  </div>
<% end %>
