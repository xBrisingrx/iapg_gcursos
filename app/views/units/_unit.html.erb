<%= tag.tr id: dom_id(unit) do %>
  <td><%= unit.name %></td>
  <td><%= unit.description %></td>
  <td><%= unit.fleet %></td>
  <td><%= unit.methodology %></td>
  <td><%= unit.category %></td>
  <td>
    <%= link_to edit_unit_path(unit), 
      class: "btn btn-warning btn-sm btn-sm btn-icon text-white",title: 'Editar' ,data: { turbo_frame: "modal"} do %>
      <i class="bi bi-pencil-square"></i>
    <% end %>
    <%= link_to modal_disable_unit_path(unit), 
      class: "btn btn-sm btn-icon btn-danger",title: 'Eliminar' ,data: { turbo_frame: "modal"} do %>
      <i class="bi bi-trash"></i>
    <% end %>
  </td>
<% end %>