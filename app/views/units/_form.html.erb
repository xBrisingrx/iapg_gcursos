<%= form_with(model: unit, builder: BootstrapBuilder) do |form| %>
  <div class="form-group row mb-2">
    <%= form.label :name, "Nombre"%>
    <%= form.text_field :name, required: true %>
    <%= inline_error_for(:name, unit) %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :description, "Descripción"%>
    <%= form.text_field :description %>
    <%= inline_error_for(:description, unit) %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :fleet, "Flota" %>
    <div class="col-6">
      <%= form.select :fleet, [ "Liviana", "Pesada" ].map { |fleet| [ "#{fleet}", fleet ] },
        {:include_blank => "Seleccione tipo flota"},
        class: "form-control",
        required: true
      %>
    </div>
    <%= inline_error_for(:fleet, unit, "offset-3") %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :methodology, "Metodología" %>
    <div class="col-6">
      <%= form.select :methodology, [ "Presencial", "Online" ].map { |methodology| [ "#{methodology}", methodology ] },
        {:include_blank => "Seleccione metodología"},
        class: "form-control",
        required: true
      %>
    </div>
    <%= inline_error_for(:methodology, unit, "offset-3") %>
  </div>

  

  <div class="form-group row mb-2">
    <%= form.label :category, "Tipo de módulo" %>
    <div class="col-6">
      <%= form.select :category, [ "Teórico", "Práctico", "Psicométrico" ].map { |category| [ "#{category}", category ] },
        {:include_blank => "Seleccione tipo de módulo"},
        class: "form-control",
        required: true
      %>
    </div>
    <%= inline_error_for(:category, unit, "offset-3") %>
  </div>

  <div>
    <%= form.submit "Guardar" %>
    <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal">Cancelar</button>
  </div>
<% end %>
