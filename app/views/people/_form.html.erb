<%= form_with(model: person, builder: BootstrapBuilder) do |form| %>
  <div class="form-group row mb-2">
    <%= form.label :cuil %>
    <%= form.text_field :cuil %>
    <%= inline_error_for(:cuil, person, "offset-3") %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :last_name, "Apellido" %>
    <%= form.text_field :last_name %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name %>
    <%= inline_error_for(:name, person, "offset-3") %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :birthdate, "Fecha nacimiento" %>
    <%= form.date_field :birthdate %>
    <%= inline_error_for(:birthdate, person, "offset-3") %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :phone, "Teléfono" %>
    <%= form.text_field :phone %>
    <%= inline_error_for(:phone, person, "offset-3") %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :celphone, "Celular" %>
    <%= form.text_field :celphone %>
    <%= inline_error_for(:celphone, person, "offset-3") %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :email %>
    <%= form.text_field :email %>
    <%= inline_error_for(:email, person, "offset-3") %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :direction, "Dirección" %>
    <%= form.text_field :direction %>
    <%= inline_error_for(:direction, person, "offset-3") %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :code, "Código" %>
    <%= form.text_field :code %>
    <%= inline_error_for(:code, person, "offset-3") %>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :city_id, "Ciudad" %>
    <div class="col-6">
      <%= form.select :city_id, City.all.includes(:province).collect { |city| [ "#{city.province.name} #{city.name}", city.id ] },
        {:include_blank => "Seleccione ciudad"},
        data: {controller: 'tselect',
          tselect_ids_value: @city_id
        }
      %>
    </div>
    <%= inline_error_for(:city_id, person, "offset-3") %>
  </div>

  <div class='mt-2'>
    <%= form.submit 'Guardar' %>
    <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal">Cancelar</button>
  </div>
<% end %>
