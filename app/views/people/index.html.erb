<h1>Personas</h1>
<div class="row justify-content-between mb-2">
  <div class="col-4">
    <%= link_to "Registrar persona", 
      new_person_path,
      data: { turbo_frame: "modal"},
      class: "btn btn-sm btn-primary" %>
  </div>
  <div class="col-6">
    <%= search_form_for @query, method: :get, data: { controller: "filter", filter_target: "form", turbo_frame: "table" } do |form| %>
      <%= form.search_field :name_or_last_name_or_celphone_or_email_or_cuil_cont,
          placeholder: "Filtrar...",
          class: "form-control form-control-sm",
          autocomplete: "off",
          data: { action: "input->filter#search" }
        %>
    <% end %>
  </div>
</div>
<%= turbo_frame_tag 'table', id: 'people_table' do %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>Cuil</th>
          <th>Apellido</th>
          <th>Nombre</th>
          <th>Celular</th>
          <th>Email</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id='tbody_people'>
        <%= render @people %>
      </tbody>
    </table>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>